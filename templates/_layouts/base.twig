<!DOCTYPE HTML>

{% set htmlAttr = {
	lang: currentSite.language,
	dir: craft.app.i18n.getLocaleById(currentSite.id).getOrientation(),
} %}

<html {{attr(htmlAttr)}}>
<head>

<!-- Template created by Piotr Pogorzelski - craftsnippets.com -->

{% include '_system/seo' %}
{% include '_system/meta' %}
{% include '_system/favicons' %}
{% include '_system/fonts' %}
{% include '_system/static' %}
{% include '_system/tag_manager' %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>

{% set bodyAttr = {
	class: [
		body_class ?? null,
		craft.app.request.isMobileBrowser() ? 'is-mobile' : 'is-desktop',
	]
} %}

<body {{attr(bodyAttr)}}>
{% include '_components/_navigation' %}

{% block layout %}{% endblock %}

<script scr="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>

</body>
</html>